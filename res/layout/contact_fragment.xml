<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_marginLeft="15dp"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >
    <LinearLayout 
    	android:layout_height="wrap_content" 
    	android:id="@+id/l1_gmail_part" 
    	android:layout_width="match_parent"
    	android:orientation="horizontal">
        <ImageView 
        	android:layout_marginTop="20dp"
        	android:id="@+id/iv_gmail" 
        	android:layout_height="75dp" 
        	android:src="@drawable/gmail" 
        	android:layout_width="70dp">
        </ImageView>
        <TextView 
        	android:textColorLink="#636363"
        	android:layout_marginTop="45dp"
        	android:layout_marginLeft="8dp"
        	android:layout_height="wrap_content" 
        	android:layout_width="wrap_content" 
        	android:textAppearance="?android:attr/textAppearanceMedium" 
        	android:textColor="#636363"
        	android:text="jeremy.dagorn@gmail.com" 
        	android:id="@+id/tv_gmail_address">
        </TextView>
    </LinearLayout>
    <LinearLayout 
    	android:layout_marginTop="70dp"
    	android:layout_height="wrap_content" 
    	android:id="@+id/ll_linkedin_part" 
    	android:layout_width="match_parent"
    	android:orientation="horizontal">
        <ImageView 
        	android:id="@+id/iv_linkedin" 
        	android:layout_height="75dp" 
        	android:src="@drawable/linkedin" 
        	android:layout_width="70dp">
        </ImageView>
        <TextView 
        	
        	android:layout_marginLeft="8dp"
        	android:layout_marginTop="25dp"
        	android:layout_height="wrap_content" 
        	android:layout_width="wrap_content" 
        	android:textAppearance="?android:attr/textAppearanceMedium"
        	android:textColor="#636363" 
        	android:textColorLink="#636363"
        	android:text="jeremydagorn" 
        	android:id="@+id/linkedin_name">
        </TextView>
    </LinearLayout>
    <LinearLayout 
    	android:layout_marginTop="80dp"
    	android:layout_height="match_parent" 
    	android:id="@+id/ll_twitter_part" 
    	android:layout_width="wrap_content">
        <ImageView 
        	android:id="@+id/iv_twitter" 
        	android:layout_height="75dp" 
        	android:src="@drawable/twitter" 
        	android:layout_width="70dp">
        </ImageView>
        <TextView 
        	android:textColorLink="#636363"
        	android:layout_marginTop="20dp"
        	android:layout_marginLeft="8dp"
        	android:textColor="#636363"
        	android:layout_height="wrap_content" 
        	android:layout_width="wrap_content" 
        	android:textAppearance="?android:attr/textAppearanceMedium" 
        	android:text="jrm2k6" 
        	android:id="@+id/tv_twitter_name">
        </TextView>
    </LinearLayout>
    
</LinearLayout>
