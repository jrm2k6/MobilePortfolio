<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" 
  android:clickable="false"
  >
    <ImageView 
    	android:layout_width="80dp" 
    	android:id="@+id/iv_type_experience_in_list_experience" 
    	android:layout_height="60dp" 
    	android:layout_centerVertical="true"
   	>
    </ImageView>
    
        <TextView 
        	android:layout_marginTop="6dp"
        	android:id="@+id/tv_item_experience_description" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content"
        	android:layout_toRightOf="@+id/iv_type_experience_in_list_experience"
        	android:layout_alignBaseline="@+id/iv_type_experience_in_list_experience"
        	android:layout_marginLeft="5dp"
        	android:textColor="#333333">
        </TextView>
        <TextView 
        	android:layout_width="wrap_content" 
        	android:id="@+id/tv_item_experience_place" 
        	android:layout_height="wrap_content"
        	android:layout_below="@+id/tv_item_experience_description" 
        	android:layout_toRightOf="@+id/iv_type_experience_in_list_experience"
        	android:layout_marginLeft="5dp"
        	>
        </TextView>
        
    
    
</RelativeLayout>
